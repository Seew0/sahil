<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary: #4361ee;
      --primary-light: #e6e9f9;
      --danger: #ef233c;
      --danger-light: #fde8ea;
      --warning: #f8961e;
      --warning-light: #fef3e6;
      --success: #4cc9f0;
      --text: #2b2d42;
      --text-light: #6c757d;
      --light: #f8f9fa;
      --border: #e9ecef;
      --radius: 12px;
      --shadow: 0 4px 12px rgba(0, 0, 0, 0.05);
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Inter', sans-serif;
      background-color: #f5f7ff;
      color: var(--text);
      line-height: 1.6;
    }
    
    .admin-container {
      max-width: 1200px;
      margin: 2rem auto;
      padding: 0 1.5rem;
    }
    
    .admin-header {
      margin-bottom: 2rem;
    }
    
    .admin-header h1 {
      font-size: 2rem;
      font-weight: 600;
      color: var(--primary);
      margin-bottom: 0.5rem;
    }
    
    .admin-header p {
      color: var(--text-light);
      font-size: 1rem;
    }
    
    .card {
      background: white;
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      margin-bottom: 2rem;
      overflow: hidden;
    }
    
    .card-header {
      padding: 1.25rem 1.5rem;
      background-color: var(--primary-light);
      border-bottom: 1px solid var(--border);
      font-weight: 600;
      color: var(--primary);
    }
    
    .card-body {
      padding: 1.5rem;
    }
    
    .alert {
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1rem;
    }
    
    .alert-info {
      background-color: #e6f7ff;
      color: #006d9c;
      border-left: 4px solid #4cc9f0;
    }
    
    .alert-warning {
      background-color: var(--warning-light);
      color: #b35900;
      border-left: 4px solid var(--warning);
    }
    
    table {
      width: 100%;
      border-collapse: collapse;
    }
    
    th, td {
      padding: 1rem;
      text-align: left;
      border-bottom: 1px solid var(--border);
    }
    
    th {
      font-weight: 500;
      color: var(--text-light);
      font-size: 0.875rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    
    .form-control {
      padding: 0.625rem 0.75rem;
      border: 1px solid var(--border);
      border-radius: 8px;
      font-size: 0.9375rem;
      transition: all 0.2s ease;
      width: 100%;
      margin-bottom: 0.75rem;
    }
    
    .form-control:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.15);
    }
    
    .form-inline {
      display: flex;
      gap: 0.75rem;
      align-items: center;
    }
    
    .btn {
      padding: 0.625rem 1rem;
      border: none;
      border-radius: 8px;
      font-size: 0.875rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s ease;
      white-space: nowrap;
    }
    
    .btn-sm {
      padding: 0.5rem 0.75rem;
      font-size: 0.8125rem;
    }
    
    .btn-warning {
      background-color: var(--warning);
      color: white;
    }
    
    .btn-warning:hover {
      background-color: #e07d0e;
    }
    
    .btn-danger {
      background-color: var(--danger);
      color: white;
    }
    
    .btn-danger:hover {
      background-color: #d91a32;
    }
    
    .actions-cell {
      display: flex;
      gap: 0.75rem;
    }
    
    .user-email {
      font-weight: 500;
      color: var(--primary);
    }
    
    .user-role {
      display: inline-block;
      padding: 0.25rem 0.5rem;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 500;
      background-color: var(--light);
    }
    
    .role-admin {
      background-color: #e6f7ff;
      color: var(--primary);
    }
    
    .role-drafter {
      background-color: #f0f7ff;
      color: #3a86ff;
    }
    
    .role-checker {
      background-color: #f5f0ff;
      color: #8338ec;
    }
    
    @media (max-width: 768px) {
      .form-inline {
        flex-direction: column;
        align-items: flex-start;
      }
      
      .actions-cell {
        flex-direction: column;
        gap: 0.5rem;
      }
      
      td, th {
        padding: 0.75rem 0.5rem;
      }
    }
  </style>
</head>
<body>
  <div class="admin-container">
    <div class="admin-header">
      <h1>Admin Dashboard</h1>
      <p>Welcome, <strong><%= user.email %></strong>. You have administrator privileges.</p>
    </div>

    <section>
      <div class="card">
        <div class="card-header">User Management</div>
        <div class="card-body">
          <% if (typeof users !== 'undefined' && users.length > 0) { %>
            <div style="overflow-x: auto;">
              <table>
                <thead>
                  <tr>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% users.forEach(user => { %>
                    <tr>
                      <td class="user-email"><%= user[0] %></td>
                      <td>
                        <span class="user-role role-<%= user[2] %>">
                          <%= user[2] %>
                        </span>
                      </td>
                      <td class="actions-cell">
                        <form action="/dashboard/admin/users/<%= user[0] %>" method="POST" class="form-inline">
                          <input 
                            type="email" 
                            name="newEmail" 
                            value="<%= user[0] %>" 
                            class="form-control form-control-sm"
                            required
                          >
                          <input 
                            type="password" 
                            name="password" 
                            placeholder="New password" 
                            class="form-control form-control-sm"
                          >
                          <select name="role" class="form-control form-control-sm" required>
                            <option value="admin" <%= user[2] === 'admin' ? 'selected' : '' %>>Admin</option>
                            <option value="drafter" <%= user[2] === 'drafter' ? 'selected' : '' %>>Drafter</option>
                            <option value="checker" <%= user[2] === 'checker' ? 'selected' : '' %>>Checker</option>
                          </select>
                          <button type="submit" class="btn btn-sm btn-warning">Update</button>
                        </form>
                        
                        <form action="/dashboard/admin/users/<%= user[0] %>/delete" method="POST" class="d-inline">
                          <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } else if (typeof users !== 'undefined') { %>
            <div class="alert alert-info">No users found in the system.</div>
          <% } else { %>
            <div class="alert alert-warning">User data not available.</div>
          <% } %>
        </div>
      </div>
    </section>
  </div>
</body>
</html>